{% set cloudinaryBaseUrl = "https://res.cloudinary.com/insomneaart/image/upload/" %}
{% set largeTransform = "f_auto,q_auto,w_1600" %}
{% set thumbTransform = "f_auto,q_auto,w_600" %}

{# components/gallery.njk #}
<div class="gallery{% if highlightFirst %} gallery--highlight-first{% endif %}">
    <div class="gallery__wrapper lightgallery">
        {% for item in images %}
            {% if item.iframe %}
                <a
      href="{{ item.iframe }}"
      class="gallery__item"
      data-lg-size="1280-720"
      data-sub-html="{{ item.alt | default('') }}"
      data-iframe='{"source": [{"src":"{{ item.iframe }}","type":"iframe"}], "attributes": {"preload": false, "controls": true}'
    >
                    <img src="{{ item.thumb }}" alt="{{ item.alt | default('Video thumbnail') }}">
                </a>

            {% elif item.threejs %}
                <a
      href=""
      class="gallery__item"
      data-lg-size="1280-720"
      data-sub-html="{{ item.alt | default('') }}"
      data-html="#{{ item.id }}"
    >
                    <img src="{{ item.thumb }}" alt="{{ item.alt | default('3D thumbnail') }}">
                </a>
                <div style="display: none;">
                    <div id="{{ item.id }}">
                        <div class="threejs-container" data-model-url="{{ item.model }}"></div>
                    </div>
                </div>

            {% elif item.gif %}
                <a
    href="{{ cloudinaryBaseUrl }}{{ item.large }}"
    class="gallery__item"
    data-sub-html="{{ item.alt | default('GIF') }}"
    data-type="image"
  >
                    <img src="{{ cloudinaryBaseUrl }}{{ item.thumb }}" alt="{{ item.alt | default('GIF') }}">
                </a>

            {% else %}
                <a
    data-src="{{ cloudinaryBaseUrl }}{{ largeTransform }}/{{ item.large }}"
    class="gallery__item{% if loop.first and highlightFirst %} gallery__item--highlight{% endif %}"
    data-lg-size="1600-1060"
    data-sub-html="{{ item.alt | default('') }}"
  >
                    <img src="{{ cloudinaryBaseUrl }}{{ thumbTransform }}/{{ item.thumb }}" alt="{{ item.alt | default('Gallery image') }}">
                </a>
            {% endif %}
        {% endfor %}

    </div>
</div>