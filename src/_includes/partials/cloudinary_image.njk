{% set cloudinaryBaseUrl = "https://res.cloudinary.com/insomneaart/image/upload/" %}
{% set basePath = path %}
{% set altText = alt | default('Bild') %}
{% set className = class | default('') %}

<img
  src="{{ cloudinaryBaseUrl }}f_auto,q_auto,w_800,c_limit/{{ basePath }}"
  srcset="
    {{ cloudinaryBaseUrl }}f_auto,q_auto,w_400,c_limit/{{ basePath }} 400w,
    {{ cloudinaryBaseUrl }}f_auto,q_auto,w_800,c_limit/{{ basePath }} 800w,
    {{ cloudinaryBaseUrl }}f_auto,q_auto,w_1200,c_limit/{{ basePath }} 1200w,
    {{ cloudinaryBaseUrl }}f_auto,q_auto,w_1600,c_limit/{{ basePath }} 1600w
  "
  sizes="(max-width: 480px) 100vw, (max-width: 768px) 90vw, 800px"
  alt="{{ altText }}"
  class="{{ className }}"
  loading="lazy"
/>
